<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @group.name %>
</p>

<p>
  <strong>About:</strong>
  <%= @group.about %>
</p>

<p>
  <strong>Initiated by:</strong>
  <%= @group.user.email %>
</p>

<% if can? :manage, @group %>
  <%= link_to 'Edit', edit_house_group_path(@house, @group) %> |
  <%= link_to 'Delete', house_group_path, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<br>
<br>

<div>
  <h3>This group's tasks:</h3>
  <% @group.tasks.each do |task| %>
    <div>
      <strong><%= task.name %></strong>
      <%= link_to 'Show', house_group_task_path(@house, @group, task)%>
    </div>
  <% end %>
  <%= link_to 'Create new task', new_house_group_task_path(@house, @group, @task) %>
</div>

<br>
<%= link_to 'Back', house_groups_path %>
