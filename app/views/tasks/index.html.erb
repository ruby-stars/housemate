<p id="notice"><%= notice %></p>

<h1>Tasks of Group: <%= @group.name %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Duedate</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group.tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= task.duedate %></td>
        <% if task.completed %>
          <td>Yes</td>
        <% else %>
          <td>No</td>
        <% end %>
        <td><%= link_to 'Show', house_group_task_path(@house, @group, task) %></td>
        <td><%= link_to 'Edit', edit_house_group_task_path(@house, @group, task) %></td>
        <td><%= link_to 'Delete', house_group_task_path(@house, @group, task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_house_group_task_path %> |

