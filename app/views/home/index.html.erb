<nav class="navbar navbar-default">
	<div class="container">
		  <h1>Housemate</h1>

    <% if user_signed_in? %>
      <ul class="nav navbar-nav navbar-right">
  	 		<li><%= link_to "New House", new_house_path %></li>
  	 		<li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
  	  </ul>

    <% else %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Sign Up", new_user_registration_path %></li>
        <li><%= link_to "Sign In", new_user_session_path %></li>
      </ul>
    <% end %>
    </div>
</nav>

<br>

<div class="container-fluid">
	<div class="row">
		<% @last_houses.each do |house| %>
			<div class="col-4">
				<%= link_to (image_tag house.HouseImage.thumb.url), house%>
				<br></br>
				<h6><%= link_to house.name, house %></h6>
				<p><%= house.city %></p>
				<p>House Manager: <%= house.users.first.email %> </p>
					<% house.groups.each do |group| %>
						<div>
							<%= group.name %>
						</div>
					<% end %>
					<button type="button" class="btn btn-outline-secondary btn-sm">
						<%= link_to 'Show House', house %>
					</button>
			</div>
		<% end %>
	</div>
</div>

<br>


<div>
  <button type="button" class="btn btn-outline-secondary">
  <%= link_to 'Show All Houses', houses_path %>
  </button>

  <button type="button" class="btn btn-outline-secondary">
  <%= link_to 'Create New House', new_house_path %>
  </button>
</div>
