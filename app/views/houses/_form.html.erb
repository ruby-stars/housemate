<section id="input-form">
  <div class="form">
    <%= form_with(model: house, local: true, html: {class: "contactForm"}) do |form| %>
      <% if house.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(house.errors.count, "error") %> prohibited this house from being saved:</h2>
          <ul>
          <% house.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, id: :house_name, class: "form-control" %>
      </div>
      <div class="form-group image">
        <%= form.label :image %><br>
        <%= image_tag(house.HouseImage.thumb.url) if house.HouseImage? %><br>
        <%= form.file_field :HouseImage, id: :house_HouseImage %>
      </div>
      <div class="form-row">
        <div class="form-group col-sm-9">
          <%= form.label :street %>
          <%= form.text_field :street, id: :house_street, class: "form-control" %>
        </div>
        <div class="form-group col-sm-3">
          <%= form.label :number %>
          <%= form.number_field :number, id: :house_number, class: "form-control" %>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-sm-3">
          <%= form.label :postalcode %>
          <%= form.number_field :postalcode, id: :house_postalcode, class: "form-control" %>
        </div>
        <div class="form-group col-sm-9">
          <%= form.label :city %>
          <%= form.text_field :city, id: :house_city, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :about %>
        <%= form.text_area :about, id: :house_about, class: "form-control", rows: "5" %>
      </div>

      <div class="actions">
        <%= form.submit class: "btn-get-started" %>
      </div>
    <% end %>

  </div><!-- end form -->
</section>
